@page "{id:int}"
@model BulkyBookWebRazorApp.Pages.Categories.EditModel
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Category.Id"/>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>
            <div class="row mb-3 p-1">
                <label asp-for="Category.Name" class="mb-1 p-0"></label>
                <input asp-for="Category.Name" type="text" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="row mb-3 p-1">
                <label asp-for="Category.DisplayOrder" class="mb-1 p-0"></label>
                <input asp-for="Category.DisplayOrder" class="form-control" />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="/Categories/Index" class="btn btn-secondary border form-control">
                        Back to the list
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

