@page
@model BulkyBookWebRazorApp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-4">

        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                Create New Category
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-page="/Categories/Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-page="/Categories/Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>